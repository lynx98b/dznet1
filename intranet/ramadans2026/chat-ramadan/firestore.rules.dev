rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // üîê Fonction helper : v√©rifie qu'un utilisateur est connect√©
    function isAuthenticated() {
      return request.auth != null;
    }

    // üîê Fonction helper : v√©rifie que l'utilisateur modifie ses propres donn√©es
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // üí¨ COLLECTION MESSAGES - MODE DEV SIMPLIFI√â
    // ‚úÖ Authentification obligatoire (s√©curit√© de base)
    // ‚úÖ Validation minimale (flexibilit√© pour tests)
    match /messages/{messageId} {
      allow read: if isAuthenticated();

      // Cr√©ation simplifi√©e : juste v√©rifier l'auth et userId
      allow create: if isAuthenticated()
        && request.resource.data.userId == request.auth.uid;

      // Modification/Suppression : uniquement ses propres messages
      allow update, delete: if isAuthenticated()
        && resource.data.userId == request.auth.uid;
    }

    // üë• COLLECTION USERS (PROFILS) - MODE DEV SIMPLIFI√â
    match /users/{userId} {
      allow read: if isAuthenticated();

      // Cr√©ation/Modification simplifi√©e : juste v√©rifier que c'est son propre profil
      allow create, update: if isOwner(userId);

      allow delete: if isOwner(userId);
    }

    // ‚å®Ô∏è COLLECTION TYPING - TOUJOURS SIMPLE
    match /typing/{typingId} {
      allow read: if isAuthenticated();

      allow create, update: if isAuthenticated()
        && request.resource.data.userId == request.auth.uid;

      allow delete: if isAuthenticated();
    }

    // üíù COLLECTION REACTIONS - MODE DEV SIMPLIFI√â
    match /reactions/{reactionId} {
      allow read: if isAuthenticated();

      allow create: if isAuthenticated()
        && request.resource.data.userId == request.auth.uid;

      allow update, delete: if isAuthenticated()
        && resource.data.userId == request.auth.uid;
    }

    // üö´ Bloquer tout acc√®s non explicitement autoris√©
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
